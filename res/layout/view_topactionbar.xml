<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f68029" >

    <LinearLayout
        android:id="@+id/ll_topbar_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/image_topbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_topbar_right1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/relative_topbar_right2"
        android:gravity="center" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_topbar_right2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center" >
    </RelativeLayout>

</RelativeLayout>